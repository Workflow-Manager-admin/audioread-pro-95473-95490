{
  "extends": [
    "react-app"
  ],
  "globals": {
    "localStorage": "readonly",
    "document": "readonly",
    "window": "readonly",
    "console": "readonly",
    "SpeechSynthesisUtterance": "readonly",
    "performance": "readonly"
  },
  "rules": {
    "no-unused-vars": ["error", { 
      "varsIgnorePattern": "React|App|documentText|wordPositionsRef|docView" 
    }],
    "react-hooks/exhaustive-deps": "off"
  }
}
